<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:layout_margin="10dp"
			  android:background="#FFFFFFFF"
			  android:orientation="vertical">

	<TextView
		android:id="@+id/text_top_content"
		style="@android:style/TextAppearance.Holo.Medium"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textColor="#ff000000"
		tools:text="All Connors"/>

	<TextView
		android:id="@+id/text_mid_content"
		style="@android:style/TextAppearance.Holo.Medium"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textColor="#ff000000"
		tools:text="Brunch this weekend?"/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:id="@+id/text_bottom_content"
			style="@android:style/TextAppearance.Holo.Small"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignBottom="@+id/img_bottom_content"
			android:layout_alignParentLeft="true"
			android:singleLine="true"
			android:textColor="#ffa0a0a0"
			tools:text="I'll be in your neighborhood doing........."/>

		<ImageView
			android:id="@+id/img_bottom_content"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:layout_alignParentRight="true"
			android:src="@drawable/ic_favorite"/>
	</RelativeLayout>
</LinearLayout>
