<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
	android:id="@+id/drawer_layout"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#FFFFFFFF"
		android:orientation="vertical">

		<android.support.v7.widget.Toolbar
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="?attr/colorPrimary"/>


		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<android.support.v7.widget.RecyclerView
				android:id="@+id/my_recycler_view"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:visibility="visible"/>

			<ScrollView
				android:id="@+id/my_card_view"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:visibility="gone">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="#FFFFFFFF"
					android:orientation="vertical">

					<android.support.v7.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="150dp"
						android:layout_margin="15dp"
						android:elevation="5dp"
						android:translationZ="5dp"
						card_view:cardCornerRadius="4dp">

						<RelativeLayout
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:background="#ff1de9b6">

							<TextView
								android:id="@+id/title"
								style="@android:style/TextAppearance.Holo.Medium"
								android:layout_width="match_parent"
								android:layout_height="20dp"
								android:gravity="center_vertical"
								android:text="contact det"
								android:textColor="@android:color/white"/>

							<TextView
								android:id="@+id/txtName"
								style="@android:style/TextAppearance.Holo.Medium"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_below="@id/title"
								android:layout_marginLeft="5dp"
								android:layout_marginTop="10dp"
								android:gravity="center_vertical"
								android:text="Name"/>

							<TextView
								android:id="@+id/txtSurname"
								style="@android:style/TextAppearance.Holo.Medium"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_below="@id/txtName"
								android:layout_marginLeft="5dp"
								android:layout_marginTop="10dp"
								android:gravity="center_vertical"
								android:text="Surname"/>

							<TextView
								android:id="@+id/txtEmail"
								style="@android:style/TextAppearance.Holo.Medium"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_alignBaseline="@id/txtName"
								android:layout_alignParentRight="true"
								android:layout_marginRight="150dp"
								android:layout_marginTop="10dp"
								android:text="Email"/>
						</RelativeLayout>
					</android.support.v7.widget.CardView>

					<android.support.v7.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="150dp"
						android:layout_margin="15dp"
						card_view:cardCornerRadius="4dp">

						<RelativeLayout
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:background="#fffff176">

							<TextView
								android:id="@+id/title02"
								style="@android:style/TextAppearance.Holo.Medium"
								android:layout_width="match_parent"
								android:layout_height="20dp"
								android:gravity="center_vertical"
								android:text="contact det"
								android:textColor="@android:color/white"/>

							<TextView
								android:id="@+id/txtName02"
								style="@android:style/TextAppearance.Holo.Medium"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_below="@id/title02"
								android:layout_marginLeft="5dp"
								android:layout_marginTop="10dp"
								android:gravity="center_vertical"
								android:text="Name"/>

							<TextView
								android:id="@+id/txtSurname02"
								style="@android:style/TextAppearance.Holo.Medium"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_below="@id/txtName02"
								android:layout_marginLeft="5dp"
								android:layout_marginTop="10dp"
								android:gravity="center_vertical"
								android:text="Surname"/>

							<TextView
								android:id="@+id/txtEmail02"
								style="@android:style/TextAppearance.Holo.Medium"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_alignBaseline="@id/txtName02"
								android:layout_alignParentRight="true"
								android:layout_marginRight="150dp"
								android:layout_marginTop="10dp"
								android:text="Email"/>
						</RelativeLayout>
					</android.support.v7.widget.CardView>

					<android.support.v7.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="150dp"
						android:layout_margin="15dp"
						android:elevation="5dp"
						android:translationZ="5dp"
						card_view:cardCornerRadius="4dp">

						<RelativeLayout
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:background="#ff2196f3">

							<TextView
								android:id="@+id/title03"
								style="@android:style/TextAppearance.Holo.Medium"
								android:layout_width="match_parent"
								android:layout_height="20dp"
								android:gravity="center_vertical"
								android:text="contact det"
								android:textColor="@android:color/white"/>

							<TextView
								android:id="@+id/txtName03"
								style="@android:style/TextAppearance.Holo.Medium"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_below="@id/title03"
								android:layout_marginLeft="5dp"
								android:layout_marginTop="10dp"
								android:gravity="center_vertical"
								android:text="Name"/>

							<TextView
								android:id="@+id/txtSurname03"
								style="@android:style/TextAppearance.Holo.Medium"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_below="@id/txtName03"
								android:layout_marginLeft="5dp"
								android:layout_marginTop="10dp"
								android:gravity="center_vertical"
								android:text="Surname"/>

							<TextView
								android:id="@+id/txtEmail03"
								style="@android:style/TextAppearance.Holo.Medium"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_alignBaseline="@id/txtName03"
								android:layout_alignParentRight="true"
								android:layout_marginRight="150dp"
								android:layout_marginTop="10dp"
								android:text="Email"/>
						</RelativeLayout>
					</android.support.v7.widget.CardView>

					<android.support.v7.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="150dp"
						android:layout_margin="15dp"
						card_view:cardCornerRadius="4dp">

						<RelativeLayout
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:background="#ffba68c8">

							<TextView
								android:id="@+id/title04"
								style="@android:style/TextAppearance.Holo.Medium"
								android:layout_width="match_parent"
								android:layout_height="20dp"
								android:gravity="center_vertical"
								android:text="contact det"
								android:textColor="@android:color/white"/>

							<TextView
								android:id="@+id/txtName04"
								style="@android:style/TextAppearance.Holo.Medium"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_below="@id/title04"
								android:layout_marginLeft="5dp"
								android:layout_marginTop="10dp"
								android:gravity="center_vertical"
								android:text="Name"/>

							<TextView
								android:id="@+id/txtSurname04"
								style="@android:style/TextAppearance.Holo.Medium"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_below="@id/txtName04"
								android:layout_marginLeft="5dp"
								android:layout_marginTop="10dp"
								android:gravity="center_vertical"
								android:text="Surname"/>

							<TextView
								android:id="@+id/txtEmail04"
								style="@android:style/TextAppearance.Holo.Medium"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_alignBaseline="@id/txtName04"
								android:layout_alignParentRight="true"
								android:layout_marginRight="150dp"
								android:layout_marginTop="10dp"
								android:text="Email"/>
						</RelativeLayout>
					</android.support.v7.widget.CardView>

					<android.support.v7.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="150dp"
						android:layout_margin="15dp"
						android:elevation="5dp"
						android:translationZ="5dp"
						card_view:cardCornerRadius="4dp">

						<RelativeLayout
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:background="#ff00bcd4">

							<TextView
								android:id="@+id/title05"
								style="@android:style/TextAppearance.Holo.Medium"
								android:layout_width="match_parent"
								android:layout_height="20dp"
								android:gravity="center_vertical"
								android:text="contact det"
								android:textColor="@android:color/white"/>

							<TextView
								android:id="@+id/txtName05"
								style="@android:style/TextAppearance.Holo.Medium"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_below="@id/title05"
								android:layout_marginLeft="5dp"
								android:layout_marginTop="10dp"
								android:gravity="center_vertical"
								android:text="Name"/>

							<TextView
								android:id="@+id/txtSurname05"
								style="@android:style/TextAppearance.Holo.Medium"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_below="@id/txtName05"
								android:layout_marginLeft="5dp"
								android:layout_marginTop="10dp"
								android:gravity="center_vertical"
								android:text="Surname"/>

							<TextView
								android:id="@+id/txtEmail05"
								style="@android:style/TextAppearance.Holo.Medium"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_alignBaseline="@id/txtName05"
								android:layout_alignParentRight="true"
								android:layout_marginRight="150dp"
								android:layout_marginTop="10dp"
								android:text="Email"/>
						</RelativeLayout>
					</android.support.v7.widget.CardView>
				</LinearLayout>
			</ScrollView>
		</FrameLayout>
	</LinearLayout>

	<ListView
		android:id="@+id/navdrawer"
		android:layout_width="@dimen/navdrawer_width"
		android:layout_height="match_parent"
		android:layout_gravity="start"
		android:layout_marginTop="?attr/actionBarSize"
		android:background="?attr/colorPrimary"
		android:choiceMode="singleChoice"
		android:divider="@android:color/white"
		android:dividerHeight="1dp"
		android:drawSelectorOnTop="false"/>
</android.support.v4.widget.DrawerLayout>
