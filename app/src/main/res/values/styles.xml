<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="AppTheme.Base"/>

	<style name="AppTheme.Base" parent="Theme.AppCompat">
		<item name="colorPrimaryDark">@color/colorPinkPrimaryDark</item>
		<item name="colorPrimary">@color/colorPinkPrimary</item>
		<item name="android:windowNoTitle">true</item>
		<item name="windowActionBar">false</item>
		<item name="android:navigationBarColor">@color/colorPinkPrimaryDark</item>
		<item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
	</style>

	<style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
		<item name="spinBars">true</item>
		<item name="color">@android:color/white</item>
	</style>

	<style name="AppTheme.Base.Recycler" parent="AppTheme.Base">
		<item name="colorPrimaryDark">@color/colorRedPrimaryDark</item>
		<item name="colorPrimary">@color/colorRedPrimary</item>
		<item name="android:windowNoTitle">true</item>
		<item name="windowActionBar">false</item>
		<item name="android:navigationBarColor">@color/colorRedPrimaryDark</item>
		<item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
	</style>
</resources>
